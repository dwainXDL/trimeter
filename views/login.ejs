    <script>
        let activeColumn = null;

        function showLogin(columnNum, clickedElement) {
            const clickedColumn = document.getElementById('col-' + columnNum);
            const allColumns = document.querySelectorAll('.grid-column');
            const allItems = document.querySelectorAll('.grid-item');

            // If clicking the same column, toggle it
            if (activeColumn === columnNum) {
                clickedColumn.classList.remove('active');
                allItems.forEach(item => item.classList.remove('outline', 'outline-4', 'outline-blue-500'));
                activeColumn = null;
                return;
            }

            // Remove active from all columns
            allColumns.forEach(col => col.classList.remove('active'));
            allItems.forEach(item => item.classList.remove('outline', 'outline-4', 'outline-blue-500'));

            // Add active to clicked column
            clickedColumn.classList.add('active');
            clickedElement.classList.add('outline', 'outline-4', 'outline-blue-500');
            activeColumn = columnNum;
        }

        // Initial animation on load
        document.addEventListener('DOMContentLoaded', function() {
            const gridItems = document.querySelectorAll('.grid-item');
            gridItems.forEach((item, index) => {
                item.style.opacity = '0';
                setTimeout(() => {
                    item.style.transition = 'opacity 0.5s ease';
                    item.style.opacity = '1';
                }, index * 100);
            });
        });

        // Click anywhere outside to close
        document.addEventListener('click', function(e) {
            if (activeColumn && !e.target.closest('.grid-column')) {
                document.querySelectorAll('.grid-column').forEach(col => col.classList.remove('active'));
                document.querySelectorAll('.grid-item').forEach(item => item.classList.remove('outline', 'outline-4', 'outline-blue-500'));
                activeColumn = null;
            }
        });

        // Keyboard support for closing
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape' && activeColumn !== null) {
                document.querySelectorAll('.grid-column').forEach(col => col.classList.remove('active'));
                document.querySelectorAll('.grid-item').forEach(item => item.classList.remove('outline', 'outline-4', 'outline-blue-500'));
                activeColumn = null;
            }
        });
