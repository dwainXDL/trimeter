{
  "name": "trimeter",
  "version": "0",
  "description": "Trimeter a web based UMS application for our IMR coursework",
  "main": "index.js",
  "scripts": {
    "test": "jest --forceExit",
    "test:watch": "jest --watch",
    "start": "node index.js",
    "dev": "nodemon index.js",
    "build:css": "tailwindcss -i ./public/css/input.css -o ./public/css/output.css",
    "watch:css": "tailwindcss -i ./public/css/input.css -o ./public/css/output.css --watch"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": ["/node_modules/"],
    "testMatch": ["**/tests/**/*.test.js"]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dwainXDL/trimeter.git"
  },
  "keywords": [
    "UMS",
    "DB"
  ],
  "author": "Dwain",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dwainXDL/trimeter/issues"
  },
  "homepage": "https://github.com/dwainXDL/trimeter#readme",
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "dotenv": "^17.2.3",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "express-session": "^1.18.2",
    "express-validator": "^7.3.1",
    "mssql": "^12.1.1",
    "multer": "^2.0.2",
    "sharp": "^0.34.5"
  },
  "devDependencies": {
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
    "supertest": "^7.1.4",
    "tailwindcss": "^3.4.18"
  }
}
